{
    "openapi": "3.0.0",
    "info": {
        "title": "Documentação da API de locação",
        "description": "Esta API foi desenvolvida para locação de veiculos",
        "version": "1.0.0",
        "contact":{
            "name": "Rafael Silva",
            "email": "rafaelsmith2002@gmail.com"
        }
    },
    "paths": {
        "/categories": {
            "post": {
            "tags": ["Category"],
            "summary": "Criar novas categorias",
            "description" : "Rota utilizada para criação de novas categorias",
            "requestBody" : {
                "content": {
                    "application/Json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string" 
                                }
                            },
                                "exemple": {
                                    "name": "Categoria de exemplo",
                                    "description": "Descrição da categoria de exemplo"
                                }
                        }
                    }
                }
            }
        },
        "response": {
            "201": {
                "description": "Criado"
            },
            "500": {
                "description": "Categoria já existente"
            }
        }
    },
    "get": {
        "tags": ["Category"],
        "summary": "Lista todas as categorias",
        "description": "Rota de consulta de categorias",
        "responses": {
            "200": {
                "description": "Sucesso",
                "content": {
                    "application/Json": {
                        "schema": {
                            "type": "array",
                            "items": {
                             "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                }
                            }
                         }
                     }
                 }
             }
          }
      }
   }

}